name=SimpleLang
jar=antlr-4.9.2-complete.jar
output=gen

rm -rf ${output}
mkdir ${output}
java -Xmx500M -cp ${jar} org.antlr.v4.Tool code/${name}.g4 -visitor -o ${output}

cp ${jar} ${output}
cp Main.java ${output}
cp code/*.java ${output}
cp code/${name}.g4 ${output}

( cd ${output}
  javac -cp ${jar} *.java
  java -cp .:${jar} Main
)
